{
  "name": "static-by-nextjs",
  "version": "1.0.0",
  "description": "Static web page files generated by next.js",
  "engines": {
    "node": ">=14.15.1",
    "yarn": ">=1.22.5"
  },
  "scripts": {
    "start": "npm-run-all -s build dev:export dev:launch",
    "dev": "npm-run-all -p watch:* next-dev",
    "build": "next build",
    "next-dev": "next dev",
    "dev:export": "next export",
    "dev:launch": "browser-sync 'out' -w",
    "lint": "npm-run-all -p lint:*",
    "lint:eslint": "eslint --fix pages",
    "lint:stylelint": "stylelint --fix {pages,styles}",
    "prettier": "prettier --write *.js **/*.{js,ts,tsx}",
    "watch:ts": "chokidar '**/*.ts' -c 'eslint --fix {path} && prettier --write {path}' ",
    "watch:tsx": "chokidar '**/*.tsx' -c 'eslint --fix {path} && stylelint --fix {path} && prettier --write {path}' ",
    "watch:css": "chokidar '**/*.css' -c 'stylelint --fix {path} && prettier --write {path}' ",
    "minify:svg": "svgo -f public/ -o public/ --config .svgo.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kkkaoru/static-by-nextjs.git"
  },
  "keywords": [],
  "author": "https://github.com/kkkaoru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kkkaoru/static-by-nextjs/issues"
  },
  "homepage": "https://github.com/kkkaoru/static-by-nextjs#readme",
  "dependencies": {
    "eslint": "^7.8.1",
    "next": "^9.5.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "sanitize.css": "^12.0.1",
    "styled-components": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@types/eslint": "^7.2.2",
    "@types/node": "^14.6.2",
    "@types/react": "^16.9.48",
    "@types/styled-components": "^5.1.3",
    "@types/stylelint": "^9.10.1",
    "@types/vfile-message": "2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.1.0",
    "babel-plugin-inline-react-svg": "^1.1.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-styled-components": "^1.11.1",
    "browser-sync": "^2.26.12",
    "chokidar-cli": "^2.1.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "react-is": "^16.13.1",
    "stylelint": "^13.7.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-order": "^4.1.0",
    "svgo": "^1.3.2",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx": [
      "eslint --max-warnings=0 --fix",
      "stylelint --max-warnings=0 --fix",
      "prettier -cw",
      "git add"
    ],
    "*.ts": [
      "eslint --max-warnings=0 --fix",
      "prettier -cw",
      "git add"
    ],
    "*.js": [
      "prettier -cw",
      "git add"
    ],
    "*.css": [
      "stylelint --max-warnings=0 --fix",
      "prettier -cw",
      "git add"
    ]
  }
}
